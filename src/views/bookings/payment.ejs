<%- include('../partials/header') %>

<div class="bg-gray-50 min-h-screen py-12">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Payment Form -->
        <div class="md:col-span-2">
          <div class="bg-white rounded-lg shadow-lg p-8">
            <h1 class="text-3xl font-bold mb-2">Payment Details</h1>
            <p class="text-gray-600 mb-8">Secure Stripe payment</p>

            <!-- Order Summary -->
            <div class="bg-blue-50 border border-blue-200 rounded-lg p-6 mb-8">
              <h3 class="font-semibold text-lg mb-4">Booking Summary</h3>
              
              <div class="space-y-2 mb-4">
                <div class="flex justify-between">
                  <span class="text-gray-700">Vehicle:</span>
                  <span class="font-medium"><%= booking.vehicle.name %></span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-700">Type:</span>
                  <span class="font-medium"><%= booking.vehicle.type %></span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-700">Pickup Date:</span>
                  <span class="font-medium"><%= new Date(booking.startDate).toLocaleString() %></span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-700">Return Date:</span>
                  <span class="font-medium"><%= new Date(booking.endDate).toLocaleString() %></span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-700">Duration:</span>
                  <span class="font-medium"><%= duration %> days</span>
                </div>
              </div>

              <div class="border-t border-blue-200 pt-4 mt-4">
                <div class="flex justify-between text-lg">
                  <span class="font-semibold">Total Amount:</span>
                  <span class="text-blue-600 font-bold">$<%= booking.totalPrice.toFixed(2) %></span>
                </div>
              </div>
            </div>

            <!-- Payment Form -->
            <form id="payment-form" class="space-y-6">
              <!-- Card Elements will be inserted here by Stripe.js -->
              <div id="card-element" class="p-4 border border-gray-300 rounded-lg"></div>
              <div id="card-errors" class="text-red-600 text-sm"></div>

              <!-- Cardholder Name -->
              <div>
                <label for="cardholder-name" class="block text-sm font-medium text-gray-700 mb-2">Cardholder Name</label>
                <input
                  type="text"
                  id="cardholder-name"
                  placeholder="Full Name"
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                  required
                >
              </div>

              <!-- Email -->
              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email Address</label>
                <input
                  type="email"
                  id="email"
                  placeholder="<%= booking.user.email %>"
                  value="<%= booking.user.email %>"
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                  required
                >
              </div>

              <!-- Phone -->
              <div>
                <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">Phone Number</label>
                <input
                  type="tel"
                  id="phone"
                  placeholder="+1 (555) 123-4567"
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                  required
                >
              </div>

              <!-- Terms -->
              <div class="flex items-start gap-3">
                <input
                  type="checkbox"
                  id="terms-payment"
                  required
                  class="mt-1"
                >
                <label for="terms-payment" class="text-sm text-gray-700">
                  I agree to authorize this payment and accept the <a href="/terms" class="text-blue-600 hover:underline">Terms and Conditions</a>
                </label>
              </div>

              <!-- Submit Button -->
              <div class="flex gap-4">
                <a href="/bookings/<%= booking.id %>" class="flex-1 px-6 py-3 border border-gray-300 rounded-lg text-gray-700 font-medium hover:bg-gray-50 transition text-center">
                  Back
                </a>
                <button
                  id="submit-payment"
                  type="submit"
                  class="flex-1 px-6 py-3 bg-blue-600 text-white rounded-lg font-medium hover:bg-blue-700 transition disabled:opacity-50 disabled:cursor-not-allowed"
                  disabled
                >
                  <span id="button-text">Pay $<%= booking.totalPrice.toFixed(2) %></span>
                </button>
              </div>
            </form>

            <!-- Security Info -->
            <div class="mt-8 pt-8 border-t border-gray-200 flex items-start gap-3">
              <svg class="w-5 h-5 text-green-600 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"></path>
              </svg>
              <div>
                <p class="font-medium text-gray-900">Your payment is secure</p>
                <p class="text-sm text-gray-600">Your card information is encrypted and never stored on our servers. Payment processed securely by Stripe.</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Booking Details Sidebar -->
        <div class="md:col-span-1">
          <div class="bg-white rounded-lg shadow-lg p-6 sticky top-6">
            <h3 class="text-xl font-bold mb-4">Booking Details</h3>
            
            <div class="space-y-4">
              <div class="pb-4 border-b border-gray-200">
                <p class="text-sm text-gray-600">Vehicle</p>
                <p class="font-semibold"><%= booking.vehicle.name %></p>
              </div>
              
              <div class="pb-4 border-b border-gray-200">
                <p class="text-sm text-gray-600">Rental Duration</p>
                <p class="font-semibold"><%= duration %> days</p>
              </div>
              
              <div class="pb-4 border-b border-gray-200">
                <p class="text-sm text-gray-600">Daily Rate</p>
                <p class="font-semibold">$<%= booking.vehicle.pricePerDay.toFixed(2) %>/day</p>
              </div>
              
              <div class="pb-4 border-b border-gray-200">
                <p class="text-sm text-gray-600">Subtotal</p>
                <p class="font-semibold">$<%= (booking.totalPrice).toFixed(2) %></p>
              </div>
              
              <div class="pb-4 border-b border-gray-200">
                <p class="text-sm text-gray-600">Taxes & Fees</p>
                <p class="font-semibold">Included</p>
              </div>
              
              <div class="bg-blue-50 p-3 rounded-lg">
                <p class="text-xs text-gray-600 mb-1">Total Amount</p>
                <p class="text-2xl font-bold text-blue-600">$<%= booking.totalPrice.toFixed(2) %></p>
              </div>

              <div class="mt-6">
                <p class="text-xs text-gray-600 mb-3">What's Included:</p>
                <ul class="space-y-2 text-sm">
                  <li class="flex items-center gap-2">
                    <svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    Unlimited Mileage
                  </li>
                  <li class="flex items-center gap-2">
                    <svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    Basic Insurance
                  </li>
                  <li class="flex items-center gap-2">
                    <svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    24/7 Support
                  </li>
                  <li class="flex items-center gap-2">
                    <svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    Free Cancellation
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Stripe -->
<script src="https://js.stripe.com/v3/"></script>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Initialize Stripe
  const stripe = Stripe('<%= process.env.STRIPE_PUBLIC_KEY %>');
  const elements = stripe.elements();
  const cardElement = elements.create('card');
  cardElement.mount('#card-element');

  // Handle card errors
  const cardErrors = document.getElementById('card-errors');
  cardElement.addEventListener('change', function(event) {
    if (event.error) {
      cardErrors.textContent = event.error.message;
    } else {
      cardErrors.textContent = '';
    }
  });

  // Handle form submission
  const form = document.getElementById('payment-form');
  const submitButton = document.getElementById('submit-payment');

  form.addEventListener('submit', async function(e) {
    e.preventDefault();
    submitButton.disabled = true;

    const { token } = await stripe.createToken(cardElement, {
      name: document.getElementById('cardholder-name').value,
      address_zip: '00000'
    });

    if (token) {
      // Send token to backend
      fetch('/bookings/<%= booking.id %>/payment', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({
          paymentMethodId: token.id
        })
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          window.location.href = data.redirectUrl;
        } else {
          cardErrors.textContent = data.message || 'Payment failed';
          submitButton.disabled = false;
        }
      })
      .catch(error => {
        console.error('Error:', error);
        cardErrors.textContent = 'An error occurred during payment';
        submitButton.disabled = false;
      });
    } else {
      cardErrors.textContent = 'Unable to create payment token';
      submitButton.disabled = false;
    }
  });

  // Enable submit button when form is valid
  const inputs = form.querySelectorAll('input[required]');
  function checkFormValidity() {
    const isValid = form.checkValidity() && cardElement && !cardErrors.textContent;
    submitButton.disabled = !isValid;
  }

  inputs.forEach(input => {
    input.addEventListener('change', checkFormValidity);
    input.addEventListener('input', checkFormValidity);
  });

  cardElement.addEventListener('change', checkFormValidity);
});
</script>

