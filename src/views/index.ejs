<%- include('./partials/header') %>

<!-- Hero Section -->
<section class="bg-blue-600 text-white py-20">
  <div class="container mx-auto px-4 text-center">
    <h1 class="text-4xl md:text-5xl font-bold mb-6">Premium Vehicle Rental Experience</h1>
    <p class="text-xl mb-8">Discover our fleet of luxury and performance vehicles for your next adventure</p>
    <a href="/vehicles" class="bg-white text-blue-600 py-3 px-6 rounded-lg font-medium hover:bg-gray-100 transition duration-300">Browse Vehicles</a>
  </div>
</section>

<!-- Search Section -->
<section class="bg-white py-8 shadow-md">
  <div class="container mx-auto px-4">
    <form action="/vehicles" method="GET" class="flex flex-col md:flex-row gap-4">
      <div class="flex-1">
        <label for="type" class="block text-gray-700 mb-2">Vehicle Type</label>
        <select id="type" name="type" class="w-full p-3 border border-gray-300 rounded-md">
          <option value="">All Types</option>
          <option value="Sedan">Sedan</option>
          <option value="SUV">SUV</option>
          <option value="Sports">Sports</option>
          <option value="Luxury">Luxury</option>
          <option value="Electric">Electric</option>
        </select>
      </div>
      <div class="flex-1">
        <label for="minPrice" class="block text-gray-700 mb-2">Min Price</label>
        <input type="number" id="minPrice" name="minPrice" placeholder="Min Price" class="w-full p-3 border border-gray-300 rounded-md">
      </div>
      <div class="flex-1">
        <label for="maxPrice" class="block text-gray-700 mb-2">Max Price</label>
        <input type="number" id="maxPrice" name="maxPrice" placeholder="Max Price" class="w-full p-3 border border-gray-300 rounded-md">
      </div>
      <div class="flex-1 flex items-end">
        <button type="submit" class="w-full bg-blue-600 text-white p-3 rounded-md hover:bg-blue-700 transition duration-300">Search</button>
      </div>
    </form>
  </div>
</section>

<!-- Featured Vehicles Section -->
<section class="py-16">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold mb-8 text-center">Featured Vehicles</h2>
    
    <% if (featuredVehicles && featuredVehicles.length > 0) { %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% featuredVehicles.forEach(vehicle => { %>
          <div class="bg-white rounded-lg overflow-hidden shadow-md hover:shadow-lg transition duration-300">
            <img 
              src="<%= vehicle.images[0] || '/images/vehicle-placeholder.jpg' %>" 
              alt="<%= vehicle.name %>" 
              class="w-full h-56 object-cover"
            >
            <div class="p-6">
              <h3 class="text-xl font-bold mb-2"><%= vehicle.name %></h3>
              <p class="text-gray-600 mb-4">Type: <%= vehicle.type %></p>
              <div class="flex justify-between items-center">
                <p class="text-blue-600 font-bold">$<%= vehicle.pricePerDay %> / day</p>
                <a href="/vehicles/<%= vehicle.id %>" class="bg-blue-600 text-white py-2 px-4 rounded hover:bg-blue-700 transition duration-300">View Details</a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
      <div class="text-center mt-10">
        <a href="/vehicles" class="inline-block bg-blue-600 text-white py-3 px-6 rounded-lg font-medium hover:bg-blue-700 transition duration-300">View All Vehicles</a>
      </div>
    <% } else { %>
      <div class="text-center text-gray-600">
        <p>No featured vehicles available at the moment.</p>
      </div>
    <% } %>
  </div>
</section>

<!-- Deal of the Day -->
<% if (locals.activeDeal) { %>
  <section class="bg-yellow-100 py-12">
    <div class="container mx-auto px-4">
      <div class="bg-white rounded-lg shadow-lg p-8 border-l-4 border-yellow-400">
        <div class="flex flex-col md:flex-row items-center">
          <div class="md:w-2/3">
            <h2 class="text-2xl font-bold text-yellow-600 mb-2">Deal of the Day</h2>
            <h3 class="text-3xl font-bold mb-4"><%= activeDeal.title %></h3>
            <p class="text-gray-600 mb-6"><%= activeDeal.description %></p>
            <div class="flex items-center">
              <span class="text-xl font-bold text-green-600 mr-3"><%= activeDeal.discountPercent %>% OFF</span>
              <span class="text-gray-500">Valid until <%= new Date(activeDeal.validUntil).toLocaleDateString() %></span>
            </div>
          </div>
          <div class="md:w-1/3 mt-6 md:mt-0 text-center">
            <a href="/vehicles" class="inline-block bg-yellow-500 text-white py-3 px-6 rounded-lg font-medium hover:bg-yellow-600 transition duration-300">Claim Offer</a>
          </div>
        </div>
      </div>
    </div>
  </section>
<% } %>

