<%- include('../partials/header') %>

<div class="container mx-auto px-4 py-12">
  <h1 class="text-3xl font-bold mb-8">My Dashboard</h1>
  
  <div class="flex flex-col lg:flex-row gap-8">
    <!-- Sidebar -->
    <div class="w-full lg:w-1/4">
      <div class="bg-white rounded-lg shadow-md p-6 mb-6">
        <div class="flex items-center mb-4">
          <div class="h-16 w-16 rounded-full bg-blue-600 text-white flex items-center justify-center text-2xl font-bold">
            <%= user.name.charAt(0).toUpperCase() %>
          </div>
          <div class="ml-4">
            <h2 class="text-xl font-bold"><%= user.name %></h2>
            <p class="text-gray-600"><%= user.email %></p>
          </div>
        </div>
        <div class="border-t border-gray-200 pt-4">
          <p class="text-gray-600">Member since: <%= new Date(user.createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long' }) %></p>
        </div>
      </div>
      
      <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <nav class="divide-y divide-gray-200">
          <a href="/user/dashboard" class="block px-6 py-4 bg-blue-50 border-l-4 border-blue-600 font-medium">
            Dashboard
          </a>
          <a href="/user/bookings" class="block px-6 py-4 hover:bg-gray-50 font-medium">
            My Bookings
          </a>
          <a href="/user/broadcasts" class="block px-6 py-4 hover:bg-gray-50 font-medium">
            Announcements
          </a>
          <a href="/user/reviews" class="block px-6 py-4 hover:bg-gray-50 font-medium">
            My Reviews
          </a>
          <a href="/user/profile" class="block px-6 py-4 hover:bg-gray-50 font-medium">
            Profile Settings
          </a>
        </nav>
      </div>
    </div>
    
    <!-- Main Content -->
    <div class="w-full lg:w-3/4">
      <% if (successMessage) { %>
        <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-6" role="alert">
          <p><%= successMessage %></p>
        </div>
      <% } %>
      
      <% if (errorMessage) { %>
        <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6" role="alert">
          <p><%= errorMessage %></p>
        </div>
      <% } %>
      
      <!-- Broadcasts Section -->
      <div class="bg-blue-50 rounded-lg shadow-md p-6 mb-8">
        <h2 class="text-xl font-semibold text-blue-800 mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 inline-block mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z" />
          </svg>
          Announcements
        </h2>
        
        <div class="space-y-4 broadcast-container">
          <% if (broadcasts && broadcasts.length > 0) { %>
            <% broadcasts.forEach(broadcast => { %>
              <div class="bg-white p-4 rounded-md shadow-sm border-l-4 border-blue-500">
                <p class="text-gray-800"><%= broadcast.message %></p>
                <p class="text-sm text-gray-500 mt-2"><%= new Date(broadcast.createdAt).toLocaleString() %></p>
              </div>
            <% }); %>
          <% } else { %>
            <div class="text-center py-4 no-announcements">
              <p class="text-gray-500">No announcements yet.</p>
            </div>
          <% } %>
        </div>
      </div>
      
      <!-- Upcoming Bookings Section -->
      <div class="bg-white rounded-lg shadow-md p-6 mb-8">
        <h2 class="text-xl font-bold mb-4">Upcoming Bookings</h2>
        
        <% if (upcomingBookings.length === 0) { %>
          <div class="text-center py-8">
            <svg class="h-16 w-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <p class="text-gray-500 mb-4">You don't have any upcoming bookings.</p>
            <a href="/vehicles" class="inline-block bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 transition duration-300">
              Browse Vehicles
            </a>
          </div>
        <% } else { %>
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Vehicle
                  </th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Dates
                  </th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Total
                  </th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Status
                  </th>
                  <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Actions
                  </th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% upcomingBookings.forEach(booking => { %>
                  <tr>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="flex items-center">
                        <div class="h-10 w-10 rounded-md flex-shrink-0 overflow-hidden">
                          <img 
                            src="<%= booking.vehicle.images && booking.vehicle.images.length > 0 ? booking.vehicle.images[0] : '/images/placeholder-car.jpg' %>" 
                            alt="<%= booking.vehicle.name %>" 
                            class="h-full w-full object-cover"
                            onerror="this.src='/images/placeholder-car.jpg'; this.onerror=null;"
                          >
                        </div>
                        <div class="ml-4">
                          <div class="text-sm font-medium text-gray-900">
                            <%= booking.vehicle.name %>
                          </div>
                          <div class="text-sm text-gray-500">
                            <%= booking.vehicle.type %>
                          </div>
                        </div>
                      </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="text-sm text-gray-900">
                        <%= new Date(booking.startDate).toLocaleDateString() %>
                      </div>
                      <div class="text-sm text-gray-500">
                        to <%= new Date(booking.endDate).toLocaleDateString() %>
                      </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="text-sm font-medium text-gray-900">
                        $<%= booking.totalAmount %>
                      </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                        <%= booking.status %>
                      </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                      <a href="/bookings/<%= booking.id %>" class="text-blue-600 hover:text-blue-900">
                        Details
                      </a>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } %>
      </div>
      
      <!-- Recent Activity Section -->
      <div class="bg-white rounded-lg shadow-md p-6 mb-8">
        <h2 class="text-xl font-bold mb-4">Recent Activity</h2>
        
        <% if (pastBookings.length === 0 && reviews.length === 0) { %>
          <div class="text-center py-8">
            <p class="text-gray-500">No recent activity to display.</p>
          </div>
        <% } else { %>
          <div class="space-y-6">
            <% [...pastBookings, ...reviews].sort((a, b) => new Date(b.createdAt) - new Date(a.createdAt)).slice(0, 5).forEach(item => { %>
              <div class="flex items-start border-l-4 <%= item.rating ? 'border-yellow-400' : 'border-blue-400' %> pl-4">
                <div class="flex-shrink-0 mt-1">
                  <% if (item.rating) { %>
                    <svg class="h-6 w-6 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                    </svg>
                  <% } else { %>
                    <svg class="h-6 w-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                  <% } %>
                </div>
                <div class="ml-3">
                  <p class="text-sm text-gray-700">
                    <% if (item.rating) { %>
                      You reviewed <strong><%= item.vehicle.name %></strong> with <%= item.rating %> stars.
                    <% } else { %>
                      You completed a booking for <strong><%= item.vehicle.name %></strong>.
                    <% } %>
                  </p>
                  <p class="text-xs text-gray-500">
                    <%= new Date(item.createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %>
                  </p>
                </div>
              </div>
            <% }) %>
          </div>
        <% } %>
      </div>
      
      <!-- Recommended Vehicles Section -->
      <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex justify-between items-center mb-4">
          <h2 class="text-xl font-bold">Recommended for You</h2>
          <a href="/vehicles" class="text-sm text-blue-600 hover:underline">View All</a>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% recommendedVehicles.forEach(vehicle => { %>
            <div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
              <div class="h-32 overflow-hidden">
                <img 
                  src="<%= vehicle.images && vehicle.images.length > 0 ? vehicle.images[0] : '/images/placeholder-car.jpg' %>" 
                  alt="<%= vehicle.name %>" 
                  class="w-full h-full object-cover"
                  onerror="this.src='/images/placeholder-car.jpg'; this.onerror=null;"
                >
              </div>
              <div class="p-4">
                <h3 class="text-md font-bold mb-1"><%= vehicle.name %></h3>
                <p class="text-sm text-gray-600 mb-2">$<%= vehicle.pricePerDay %>/day</p>
                <a href="/vehicles/<%= vehicle.id %>" class="text-sm text-blue-600 hover:underline">
                  View Details
                </a>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Store user data for socket authentication
  window.userData = {
    userId: '<%= user.id %>',
    role: '<%= user.role %>'
  };
</script>
<script src="/javascripts/broadcasts.js"></script>

<%- include('../partials/footer') %>