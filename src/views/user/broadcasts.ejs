<%- include('../partials/header') %>

<div class="container mx-auto px-4 py-12">
  <h1 class="text-3xl font-bold mb-8">Announcements</h1>
  
  <div class="flex flex-col lg:flex-row gap-8">
    <!-- Sidebar -->
    <div class="w-full lg:w-1/4">
      <div class="bg-white rounded-lg shadow-md p-6 mb-6">
        <div class="flex items-center mb-4">
          <div class="h-16 w-16 rounded-full bg-blue-600 text-white flex items-center justify-center text-2xl font-bold">
            <%= user.name.charAt(0).toUpperCase() %>
          </div>
          <div class="ml-4">
            <h2 class="text-xl font-bold"><%= user.name %></h2>
            <p class="text-gray-600"><%= user.email %></p>
          </div>
        </div>
      </div>
      
      <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <nav class="divide-y divide-gray-200">
          <a href="/user/dashboard" class="block px-6 py-4 hover:bg-gray-50 font-medium">
            Dashboard
          </a>
          <a href="/user/bookings" class="block px-6 py-4 hover:bg-gray-50 font-medium">
            My Bookings
          </a>
          <a href="/user/broadcasts" class="block px-6 py-4 bg-blue-50 border-l-4 border-blue-600 font-medium">
            Announcements
          </a>
          <a href="/user/reviews" class="block px-6 py-4 hover:bg-gray-50 font-medium">
            My Reviews
          </a>
          <a href="/user/profile" class="block px-6 py-4 hover:bg-gray-50 font-medium">
            Profile Settings
          </a>
        </nav>
      </div>
    </div>
    
    <!-- Main Content -->
    <div class="w-full lg:w-3/4">
      <% if (successMessage) { %>
        <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-6" role="alert">
          <p><%= successMessage %></p>
        </div>
      <% } %>
      
      <% if (errorMessage) { %>
        <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6" role="alert">
          <p><%= errorMessage %></p>
        </div>
      <% } %>
      
      <!-- Broadcasts List -->
      <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-semibold">All Announcements</h2>
          <p class="text-sm text-gray-500 mt-1">Important updates from TorqueX</p>
        </div>

        <div class="divide-y divide-gray-200 broadcast-container">
          <% if (broadcasts && broadcasts.length > 0) { %>
            <% broadcasts.forEach(broadcast => { %>
              <div class="p-6">
                <div class="flex items-start">
                  <div class="flex-shrink-0">
                    <div class="h-10 w-10 rounded-full bg-blue-100 flex items-center justify-center">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z" />
                      </svg>
                    </div>
                  </div>
                  <div class="ml-4 flex-1">
                    <p class="text-lg font-medium text-gray-800"><%= broadcast.message %></p>
                    <div class="mt-2 text-sm text-gray-500 flex items-center">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                      <%= new Date(broadcast.createdAt).toLocaleString() %>
                    </div>
                  </div>
                </div>
              </div>
            <% }); %>
          <% } else { %>
            <div class="p-6 text-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
              </svg>
              <p class="text-gray-500 text-lg">No announcements yet.</p>
              <p class="text-gray-400 mt-1">Check back later for updates!</p>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Store user data for socket authentication
  window.userData = {
    userId: '<%= user.id %>',
    role: '<%= user.role %>'
  };
</script>
<script src="/javascripts/broadcasts.js"></script>

<%- include('../partials/footer') %>