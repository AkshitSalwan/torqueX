<%- include('../partials/header') %>

<div class="container mx-auto px-4 py-12">
  <h1 class="text-3xl font-bold mb-8">My Bookings</h1>
  
  <div class="flex flex-col lg:flex-row gap-8">
    <!-- Sidebar -->
    <div class="w-full lg:w-1/4">
      <div class="bg-white rounded-lg shadow-md p-6 mb-6">
        <div class="flex items-center mb-4">
          <div class="h-16 w-16 rounded-full bg-blue-600 text-white flex items-center justify-center text-2xl font-bold">
            <%= user.name.charAt(0).toUpperCase() %>
          </div>
          <div class="ml-4">
            <h2 class="text-xl font-bold"><%= user.name %></h2>
            <p class="text-gray-600"><%= user.email %></p>
          </div>
        </div>
      </div>
      
      <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <nav class="divide-y divide-gray-200">
          <a href="/user/dashboard" class="block px-6 py-4 hover:bg-gray-50 font-medium">
            Dashboard
          </a>
          <a href="/user/bookings" class="block px-6 py-4 bg-blue-50 border-l-4 border-blue-600 font-medium">
            My Bookings
          </a>
          <a href="/user/broadcasts" class="block px-6 py-4 hover:bg-gray-50 font-medium">
            Announcements
          </a>
          <a href="/user/reviews" class="block px-6 py-4 hover:bg-gray-50 font-medium">
            My Reviews
          </a>
          <a href="/user/profile" class="block px-6 py-4 hover:bg-gray-50 font-medium">
            Profile Settings
          </a>
        </nav>
      </div>
    </div>
    
    <!-- Main Content -->
    <div class="w-full lg:w-3/4">
      <% if (successMessage) { %>
        <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-6" role="alert">
          <p><%= successMessage %></p>
        </div>
      <% } %>
      
      <% if (errorMessage) { %>
        <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6" role="alert">
          <p><%= errorMessage %></p>
        </div>
      <% } %>
      
      <!-- Booking Tabs -->
      <div class="mb-8">
        <nav class="flex border-b border-gray-200">
          <button class="booking-tab py-4 px-6 text-center border-b-2 border-blue-500 font-medium text-blue-600" data-tab="all">
            All Bookings
          </button>
          <button class="booking-tab py-4 px-6 text-center border-b-2 border-transparent font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300" data-tab="confirmed">
            Confirmed
          </button>
          <button class="booking-tab py-4 px-6 text-center border-b-2 border-transparent font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300" data-tab="completed">
            Completed
          </button>
          <button class="booking-tab py-4 px-6 text-center border-b-2 border-transparent font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300" data-tab="canceled">
            Canceled
          </button>
        </nav>
      </div>
      
      <!-- All Bookings Section -->
      <div id="all-bookings" class="booking-section">
        <% if (bookings && bookings.length > 0) { %>
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="grid grid-cols-1 divide-y divide-gray-200">
              <% bookings.forEach(booking => { %>
                <div class="p-6">
                  <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-4">
                    <div>
                      <h3 class="text-xl font-bold"><%= booking.vehicle.make %> <%= booking.vehicle.model %> <%= booking.vehicle.year %></h3>
                      <p class="text-gray-600">
                        <span class="font-medium">Booking ID:</span> #<%= booking.id.substring(0, 8) %>
                      </p>
                    </div>
                    <div class="mt-2 md:mt-0">
                      <% if (booking.status === 'CONFIRMED') { %>
                        <span class="px-3 py-1 rounded-full text-sm bg-green-100 text-green-800">Confirmed</span>
                      <% } else if (booking.status === 'PENDING') { %>
                        <span class="px-3 py-1 rounded-full text-sm bg-yellow-100 text-yellow-800">Pending</span>
                      <% } else if (booking.status === 'CANCELED') { %>
                        <span class="px-3 py-1 rounded-full text-sm bg-red-100 text-red-800">Canceled</span>
                      <% } else if (booking.status === 'COMPLETED') { %>
                        <span class="px-3 py-1 rounded-full text-sm bg-blue-100 text-blue-800">Completed</span>
                      <% } %>
                    </div>
                  </div>
                  
                  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
                    <div>
                      <p class="text-sm text-gray-500">Pick-up Date</p>
                      <p class="font-medium"><%= new Date(booking.startDate).toLocaleDateString('en-US', { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric' }) %></p>
                    </div>
                    <div>
                      <p class="text-sm text-gray-500">Return Date</p>
                      <p class="font-medium"><%= new Date(booking.endDate).toLocaleDateString('en-US', { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric' }) %></p>
                    </div>
                    <div>
                      <p class="text-sm text-gray-500">Total Price</p>
                      <p class="font-medium">$<%= booking.totalPrice.toFixed(2) %></p>
                    </div>
                  </div>
                  
                  <div class="flex flex-wrap gap-2 mt-4">
                    <a href="/vehicles/<%= booking.vehicleId %>" class="inline-block text-blue-600 hover:text-blue-800 font-medium text-sm">
                      View Vehicle
                    </a>
                    
                    <% if (booking.status === 'CONFIRMED' && new Date(booking.startDate) > new Date()) { %>
                      <form action="/bookings/<%= booking.id %>/cancel" method="POST" class="inline">
                        <button type="submit" class="text-red-600 hover:text-red-800 font-medium text-sm" onclick="return confirm('Are you sure you want to cancel this booking? This action cannot be undone.')">
                          Cancel Booking
                        </button>
                      </form>
                    <% } %>
                    
                    <% if (booking.status === 'COMPLETED' && !booking.hasReview) { %>
                      <a href="/reviews/create/<%= booking.id %>" class="inline-block text-green-600 hover:text-green-800 font-medium text-sm">
                        Leave a Review
                      </a>
                    <% } %>
                  </div>
                </div>
              <% }) %>
            </div>
          </div>
        <% } else { %>
          <div class="bg-white rounded-lg shadow-md p-12 text-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
            <h3 class="text-xl font-medium text-gray-900 mb-2">No bookings found</h3>
            <p class="text-gray-500 mb-6">You haven't made any bookings yet. Explore our collection and book your dream car today!</p>
            <a href="/vehicles" class="inline-block bg-blue-600 text-white py-2 px-6 rounded-lg hover:bg-blue-700 transition duration-300">
              Browse Vehicles
            </a>
          </div>
        <% } %>
      </div>
      
      <!-- Confirmed Bookings Section -->
      <div id="confirmed-bookings" class="booking-section hidden">
        <% 
          const confirmedBookings = bookings ? bookings.filter(booking => booking.status === 'CONFIRMED') : [];
          if (confirmedBookings.length > 0) { 
        %>
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="grid grid-cols-1 divide-y divide-gray-200">
              <% confirmedBookings.forEach(booking => { %>
                <div class="p-6">
                  <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-4">
                    <div>
                      <h3 class="text-xl font-bold"><%= booking.vehicle.make %> <%= booking.vehicle.model %> <%= booking.vehicle.year %></h3>
                      <p class="text-gray-600">
                        <span class="font-medium">Booking ID:</span> #<%= booking.id.substring(0, 8) %>
                      </p>
                    </div>
                    <div class="mt-2 md:mt-0">
                      <span class="px-3 py-1 rounded-full text-sm bg-green-100 text-green-800">Confirmed</span>
                    </div>
                  </div>
                  
                  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
                    <div>
                      <p class="text-sm text-gray-500">Pick-up Date</p>
                      <p class="font-medium"><%= new Date(booking.startDate).toLocaleDateString('en-US', { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric' }) %></p>
                    </div>
                    <div>
                      <p class="text-sm text-gray-500">Return Date</p>
                      <p class="font-medium"><%= new Date(booking.endDate).toLocaleDateString('en-US', { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric' }) %></p>
                    </div>
                    <div>
                      <p class="text-sm text-gray-500">Total Price</p>
                      <p class="font-medium">$<%= booking.totalPrice.toFixed(2) %></p>
                    </div>
                  </div>
                  
                  <div class="flex flex-wrap gap-2 mt-4">
                    <a href="/vehicles/<%= booking.vehicleId %>" class="inline-block text-blue-600 hover:text-blue-800 font-medium text-sm">
                      View Vehicle
                    </a>
                    
                    <% if (new Date(booking.startDate) > new Date()) { %>
                      <form action="/bookings/<%= booking.id %>/cancel" method="POST" class="inline">
                        <button type="submit" class="text-red-600 hover:text-red-800 font-medium text-sm" onclick="return confirm('Are you sure you want to cancel this booking? This action cannot be undone.')">
                          Cancel Booking
                        </button>
                      </form>
                    <% } %>
                  </div>
                </div>
              <% }) %>
            </div>
          </div>
        <% } else { %>
          <div class="bg-white rounded-lg shadow-md p-12 text-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
            <h3 class="text-xl font-medium text-gray-900 mb-2">No confirmed bookings</h3>
            <p class="text-gray-500 mb-6">You don't have any confirmed bookings at the moment.</p>
            <a href="/vehicles" class="inline-block bg-blue-600 text-white py-2 px-6 rounded-lg hover:bg-blue-700 transition duration-300">
              Browse Vehicles
            </a>
          </div>
        <% } %>
      </div>
      
      <!-- Completed Bookings Section -->
      <div id="completed-bookings" class="booking-section hidden">
        <% 
          const completedBookings = bookings ? bookings.filter(booking => booking.status === 'COMPLETED') : [];
          if (completedBookings.length > 0) { 
        %>
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="grid grid-cols-1 divide-y divide-gray-200">
              <% completedBookings.forEach(booking => { %>
                <div class="p-6">
                  <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-4">
                    <div>
                      <h3 class="text-xl font-bold"><%= booking.vehicle.make %> <%= booking.vehicle.model %> <%= booking.vehicle.year %></h3>
                      <p class="text-gray-600">
                        <span class="font-medium">Booking ID:</span> #<%= booking.id.substring(0, 8) %>
                      </p>
                    </div>
                    <div class="mt-2 md:mt-0">
                      <span class="px-3 py-1 rounded-full text-sm bg-blue-100 text-blue-800">Completed</span>
                    </div>
                  </div>
                  
                  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
                    <div>
                      <p class="text-sm text-gray-500">Pick-up Date</p>
                      <p class="font-medium"><%= new Date(booking.startDate).toLocaleDateString('en-US', { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric' }) %></p>
                    </div>
                    <div>
                      <p class="text-sm text-gray-500">Return Date</p>
                      <p class="font-medium"><%= new Date(booking.endDate).toLocaleDateString('en-US', { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric' }) %></p>
                    </div>
                    <div>
                      <p class="text-sm text-gray-500">Total Price</p>
                      <p class="font-medium">$<%= booking.totalPrice.toFixed(2) %></p>
                    </div>
                  </div>
                  
                  <div class="flex flex-wrap gap-2 mt-4">
                    <a href="/vehicles/<%= booking.vehicleId %>" class="inline-block text-blue-600 hover:text-blue-800 font-medium text-sm">
                      View Vehicle
                    </a>
                    
                    <% if (!booking.hasReview) { %>
                      <a href="/reviews/create/<%= booking.id %>" class="inline-block text-green-600 hover:text-green-800 font-medium text-sm">
                        Leave a Review
                      </a>
                    <% } else { %>
                      <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                        </svg>
                        Reviewed
                      </span>
                    <% } %>
                  </div>
                </div>
              <% }) %>
            </div>
          </div>
        <% } else { %>
          <div class="bg-white rounded-lg shadow-md p-12 text-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
            <h3 class="text-xl font-medium text-gray-900 mb-2">No completed bookings</h3>
            <p class="text-gray-500 mb-6">You don't have any completed bookings yet.</p>
            <a href="/vehicles" class="inline-block bg-blue-600 text-white py-2 px-6 rounded-lg hover:bg-blue-700 transition duration-300">
              Browse Vehicles
            </a>
          </div>
        <% } %>
      </div>
      
      <!-- Canceled Bookings Section -->
      <div id="canceled-bookings" class="booking-section hidden">
        <% 
          const canceledBookings = bookings ? bookings.filter(booking => booking.status === 'CANCELED') : [];
          if (canceledBookings.length > 0) { 
        %>
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="grid grid-cols-1 divide-y divide-gray-200">
              <% canceledBookings.forEach(booking => { %>
                <div class="p-6">
                  <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-4">
                    <div>
                      <h3 class="text-xl font-bold"><%= booking.vehicle.make %> <%= booking.vehicle.model %> <%= booking.vehicle.year %></h3>
                      <p class="text-gray-600">
                        <span class="font-medium">Booking ID:</span> #<%= booking.id.substring(0, 8) %>
                      </p>
                    </div>
                    <div class="mt-2 md:mt-0">
                      <span class="px-3 py-1 rounded-full text-sm bg-red-100 text-red-800">Canceled</span>
                    </div>
                  </div>
                  
                  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
                    <div>
                      <p class="text-sm text-gray-500">Scheduled Pick-up</p>
                      <p class="font-medium"><%= new Date(booking.startDate).toLocaleDateString('en-US', { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric' }) %></p>
                    </div>
                    <div>
                      <p class="text-sm text-gray-500">Scheduled Return</p>
                      <p class="font-medium"><%= new Date(booking.endDate).toLocaleDateString('en-US', { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric' }) %></p>
                    </div>
                    <div>
                      <p class="text-sm text-gray-500">Total Price</p>
                      <p class="font-medium">$<%= booking.totalPrice.toFixed(2) %></p>
                    </div>
                  </div>
                  
                  <div class="flex flex-wrap gap-2 mt-4">
                    <a href="/vehicles/<%= booking.vehicleId %>" class="inline-block text-blue-600 hover:text-blue-800 font-medium text-sm">
                      Book Again
                    </a>
                  </div>
                </div>
              <% }) %>
            </div>
          </div>
        <% } else { %>
          <div class="bg-white rounded-lg shadow-md p-12 text-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
            <h3 class="text-xl font-medium text-gray-900 mb-2">No canceled bookings</h3>
            <p class="text-gray-500 mb-6">You don't have any canceled bookings.</p>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Tab switching functionality
    const tabs = document.querySelectorAll('.booking-tab');
    const sections = document.querySelectorAll('.booking-section');
    
    tabs.forEach(tab => {
      tab.addEventListener('click', function() {
        // Remove active class from all tabs
        tabs.forEach(t => {
          t.classList.remove('border-blue-500', 'text-blue-600');
          t.classList.add('border-transparent', 'text-gray-500');
        });
        
        // Add active class to clicked tab
        this.classList.add('border-blue-500', 'text-blue-600');
        this.classList.remove('border-transparent', 'text-gray-500');
        
        // Hide all sections
        sections.forEach(section => {
          section.classList.add('hidden');
        });
        
        // Show corresponding section
        const sectionId = this.getAttribute('data-tab') + '-bookings';
        document.getElementById(sectionId).classList.remove('hidden');
      });
    });
  });
</script>