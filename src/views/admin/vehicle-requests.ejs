  <!-- Main Content -->
  <div class="flex-1 bg-gray-100">
    <header class="bg-white shadow">
      <div class="max-w-7xl mx-auto py-4 px-6 flex justify-between items-center">
        <h1 class="text-2xl font-bold text-gray-900">Vehicle Requests</h1>
        <div class="flex items-center">
          <span class="text-gray-700 mr-4">Welcome, <%= user.name %></span>
          <a href="/auth/logout" class="text-red-600 hover:text-red-800">Logout</a>
        </div>
      </div>
    </header>

    <main class="max-w-7xl mx-auto py-6 px-6">
      <!-- Flash Messages -->
      <% if (locals.successMessages && successMessages.length > 0) { %>
        <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-6" role="alert">
          <p><%= successMessages[0] %></p>
        </div>
      <% } %>
      
      <% if (locals.errorMessages && errorMessages.length > 0) { %>
        <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6" role="alert">
          <p><%= errorMessages[0] %></p>
        </div>
      <% } %>
      
      <!-- Filters -->
      <div class="bg-white rounded-lg shadow overflow-hidden mb-8">
        <div class="px-6 py-4">
          <div class="flex flex-col md:flex-row md:items-center md:justify-between">
            <div class="flex space-x-2">
              <a href="/admin/vehicle-requests?status=all" class="<%= currentStatus === 'all' ? 'bg-blue-500 text-white' : 'bg-gray-200 text-gray-700' %> px-4 py-2 rounded-md font-medium text-sm">
                All
              </a>
              <a href="/admin/vehicle-requests?status=pending" class="<%= currentStatus === 'pending' ? 'bg-blue-500 text-white' : 'bg-gray-200 text-gray-700' %> px-4 py-2 rounded-md font-medium text-sm">
                Pending
              </a>
              <a href="/admin/vehicle-requests?status=approved" class="<%= currentStatus === 'approved' ? 'bg-blue-500 text-white' : 'bg-gray-200 text-gray-700' %> px-4 py-2 rounded-md font-medium text-sm">
                Approved
              </a>
              <a href="/admin/vehicle-requests?status=rejected" class="<%= currentStatus === 'rejected' ? 'bg-blue-500 text-white' : 'bg-gray-200 text-gray-700' %> px-4 py-2 rounded-md font-medium text-sm">
                Rejected
              </a>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Requests Table -->
      <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">Vehicle Requests</h3>
        </div>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  User
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Vehicle Details
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Request Date
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Status
                </th>
                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Actions
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% if (requests.length === 0) { %>
                <tr>
                  <td colspan="5" class="px-6 py-4 text-center text-gray-500">
                    No vehicle requests found
                  </td>
                </tr>
              <% } else { %>
                <% requests.forEach(request => { %>
                  <tr>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="flex items-center">
                        <div class="text-sm font-medium text-gray-900">
                          <%= request.user.name %>
                        </div>
                        <div class="text-sm text-gray-500">
                          <%= request.user.email %>
                        </div>
                      </div>
                    </td>
                    <td class="px-6 py-4">
                      <div class="text-sm text-gray-900">
                        <%= request.make %> <%= request.model %>
                      </div>
                      <div class="text-sm text-gray-500">
                        <%= request.year %> Â· <%= request.type %>
                      </div>
                      <% if (request.description) { %>
                        <div class="mt-1 text-sm text-gray-500">
                          <%= request.description %>
                        </div>
                      <% } %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      <%= new Date(request.createdAt).toLocaleDateString() %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <% if (request.status === 'PENDING') { %>
                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">
                          Pending
                        </span>
                      <% } else if (request.status === 'APPROVED') { %>
                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                          Approved
                        </span>
                      <% } else if (request.status === 'REJECTED') { %>
                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                          Rejected
                        </span>
                      <% } %>
                      <% if (request.adminComment) { %>
                        <div class="mt-1 text-xs text-gray-500">
                          Note: <%= request.adminComment %>
                        </div>
                      <% } %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                      <div class="flex justify-end space-x-2">
                        <% if (request.status === 'PENDING') { %>
                          <button 
                            onclick="updateRequestStatus('<%= request.id %>', 'APPROVED', 'Approve this request?')"
                            class="text-green-600 hover:text-green-900"
                          >
                            Approve
                          </button>
                          <button
                            onclick="updateRequestStatus('<%= request.id %>', 'REJECTED', 'Reject this request?')"
                            class="text-red-600 hover:text-red-900"
                          >
                            Reject
                          </button>
                        <% } else { %>
                          <button
                            onclick="updateRequestStatus('<%= request.id %>', 'PENDING', 'Reset this request to pending?')"
                            class="text-gray-600 hover:text-gray-900"
                          >
                            Reset
                          </button>
                        <% } %>
                      </div>
                    </td>
                  </tr>
                <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>
        
        <!-- Pagination -->
        <% if (totalPages > 1) { %>
          <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 flex items-center justify-between">
            <div class="flex-1 flex justify-between sm:hidden">
              <% if (page > 1) { %>
                <a href="/admin/vehicle-requests?page=<%= page - 1 %>&status=<%= currentStatus %>" class="relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                  Previous
                </a>
              <% } else { %>
                <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-300 bg-gray-50 cursor-not-allowed">
                  Previous
                </span>
              <% } %>
              
              <% if (page < totalPages) { %>
                <a href="/admin/vehicle-requests?page=<%= page + 1 %>&status=<%= currentStatus %>" class="ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                  Next
                </a>
              <% } else { %>
                <span class="ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-300 bg-gray-50 cursor-not-allowed">
                  Next
                </span>
              <% } %>
            </div>
            <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
              <div>
                <p class="text-sm text-gray-700">
                  Showing <span class="font-medium"><%= Math.min((page - 1) * limit + 1, totalRequests) %></span> to <span class="font-medium"><%= Math.min(page * limit, totalRequests) %></span> of <span class="font-medium"><%= totalRequests %></span> results
                </p>
              </div>
              <div>
                <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
                  <% if (page > 1) { %>
                    <a href="/admin/vehicle-requests?page=<%= page - 1 %>&status=<%= currentStatus %>" class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                      <span class="sr-only">Previous</span>
                      <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                      </svg>
                    </a>
                  <% } else { %>
                    <span class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-gray-50 text-sm font-medium text-gray-300 cursor-not-allowed">
                      <span class="sr-only">Previous</span>
                      <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                      </svg>
                    </span>
                  <% } %>
                  
                  <% for (let i = 1; i <= totalPages; i++) { %>
                    <% if (i === page) { %>
                      <span aria-current="page" class="z-10 bg-blue-50 border-blue-500 text-blue-600 relative inline-flex items-center px-4 py-2 border text-sm font-medium">
                        <%= i %>
                      </span>
                    <% } else { %>
                      <a href="/admin/vehicle-requests?page=<%= i %>&status=<%= currentStatus %>" class="bg-white border-gray-300 text-gray-500 hover:bg-gray-50 relative inline-flex items-center px-4 py-2 border text-sm font-medium">
                        <%= i %>
                      </a>
                    <% } %>
                  <% } %>
                  
                  <% if (page < totalPages) { %>
                    <a href="/admin/vehicle-requests?page=<%= page + 1 %>&status=<%= currentStatus %>" class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                      <span class="sr-only">Next</span>
                      <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                      </svg>
                    </a>
                  <% } else { %>
                    <span class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-gray-50 text-sm font-medium text-gray-300 cursor-not-allowed">
                      <span class="sr-only">Next</span>
                      <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                      </svg>
                    </span>
                  <% } %>
                </nav>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    </main>
  </div>
</div>

<script>
  function updateRequestStatus(requestId, status, confirmMsg) {
    if (confirm(confirmMsg)) {
      const comment = status === 'REJECTED' ? prompt('Provide a reason for rejection (optional):') : '';
      
      fetch(`/admin/vehicle-requests/${requestId}/status`, {
        method: 'PUT',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ 
          status, 
          adminComment: comment 
        })
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          alert(`Vehicle request ${status.toLowerCase()} successfully`);
          window.location.reload();
        } else {
          alert(`Error: ${data.message || 'Could not update status'}`);
        }
      })
      .catch(error => {
        console.error('Error:', error);
        alert('Failed to update request status. Please try again.');
      });
    }
  }
</script>

