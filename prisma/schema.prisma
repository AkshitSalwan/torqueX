generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String           @id @default(uuid())
  clerkId         String           @unique
  name            String
  email           String           @unique
  role            Role             @default(USER)
  phone           String?          // Encrypted field
  address         String?          // Encrypted field
  passwordHash    String?          // For fallback authentication
  passwordSalt    String?          // For fallback authentication
  createdAt       DateTime         @default(now())
  bookings        Booking[]
  reviews         Review[]
  vehicleRequests VehicleRequest[]
}

model Vehicle {
  id           String    @id @default(uuid())
  name         String
  type         String
  specs        Json
  pricePerDay  Float
  availability Boolean   @default(true)
  images       String[]
  description  String?
  features     String[]  @default([])
  createdAt    DateTime  @default(now())
  bookings     Booking[]
  reviews      Review[]
}

model Booking {
  id              String   @id @default(uuid())
  userId          String
  vehicleId       String
  startDate       DateTime
  endDate         DateTime
  status          Status   @default(PENDING)
  totalPrice      Float
  paymentIntentId String?  // Stripe payment intent ID
  paymentMethod   String?  // Encrypted payment method details
  promoCode       String?  // Applied promo code (not hashed for user reference)
  user            User     @relation(fields: [userId], references: [id])
  vehicle         Vehicle  @relation(fields: [vehicleId], references: [id])
  reviews         Review[]
}

model Review {
  id        String   @id @default(uuid())
  bookingId String
  userId    String
  vehicleId String
  rating    Int
  comment   String
  createdAt DateTime @default(now())
  booking   Booking  @relation(fields: [bookingId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
  vehicle   Vehicle  @relation(fields: [vehicleId], references: [id])
}

model Deal {
  id            String   @id @default(uuid())
  title         String
  code          String   @unique
  codeHash      String   @unique        // SHA256 hash of promo code for security
  description   String
  discountType  String   @default("percentage") // percentage or fixed
  discountValue Float
  minPurchase   Float?
  validFrom     DateTime
  validUntil    DateTime
  usageLimit    Int?
  currentUsage  Int      @default(0)   // Track usage count
  vehicleType   String?
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Broadcast {
  id         String   @id @default(uuid())
  adminId    String
  title      String
  message    String
  userTarget String   @default("ALL")
  createdAt  DateTime @default(now())
}

model VehicleRequest {
  id           String             @id @default(uuid())
  userId       String
  make         String
  model        String
  year         Int
  type         String
  description  String?
  status       VehicleRequestStatus @default(PENDING)
  adminComment String?
  createdAt    DateTime           @default(now())
  updatedAt    DateTime           @updatedAt
  user         User               @relation(fields: [userId], references: [id])
}

enum Role {
  USER
  ADMIN
}

enum Status {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

enum VehicleRequestStatus {
  PENDING
  APPROVED
  REJECTED
}
