# Environment Variables

# Server
PORT=3000
NODE_ENV=development
SESSION_SECRET=your-secret-key-here-min-32-chars

# Encryption
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# For development, this can be auto-generated if not set
ENCRYPTION_KEY=your-encryption-key-here-64-hex-chars

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/torquex?schema=public"

# Clerk Authentication
CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key
CLERK_SECRET_KEY=sk_test_your_secret_key

# Stripe Payment
STRIPE_PUBLIC_KEY=pk_test_your_publishable_key
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Application URLs (for webhooks)
APP_URL=http://localhost:3000
WEBHOOK_URL=http://localhost:3000/webhooks